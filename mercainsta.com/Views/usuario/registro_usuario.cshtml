@model registromodel
@{
    Layout = null; ViewData["Title"] = "Home Page";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<style>
    body {

        background-color:rgb(233,233,221)

    }





</style>

<body>
    <div class="container">

        <div class="row align-items-end ">


            <h1 class="text-center"> Registro de usuario </h1>

        </div>


    </div>

   
 <div class="container">
        <form asp-action="Registro_usuario" asp-controller="Usuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <div class="row aling-item-end">
         <div class="col">

         </div>
        

         <div class="col border border-1 border-dark">
             
              
             <div class="mb-3 fw-bold">
                 <label for="Id" class="form-label">NºIdentificacion</label>
                 <input type="text" class="form-control" asp-for="Id" placeholder="Id" />
                 <span asp-validation-for="Id" class="text-danger"></span>
             </div>

                <div class="mb-3 fw-bold">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" asp-for="nombre" placeholder="nombre"/>
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="mb-3 fw-bold">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" class="form-control" asp-for="apellido" placeholder="apellido"/>
                    <span asp-validation-for="apellido" class="text-danger"></span>
                </div>

                <div class="m-3 fw-bold">
                    <label for="fecha" class="form-label">Fecha de nacimiento</label>
                        <input max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" type="date" class="form-control" asp-for="fecha" placeholder="fecha" />
                    <span asp-validation-for="fecha" class="text-danger"></span>
                </div>

            
                <div class="mb-3 fw-bold">
                   <label for="sexo" class="form-label">Sexo</label>
                   <span asp-validation-for="sexo" class="text-danger"></span>
                    <select asp-for="sexo" class="form-select" aria-label="Floating label select example" placeholder="sexo" >
                        <option selected>----------</option>
                        <option value="1">Masculino</option>
                        <option value="2">Femenino</option>
                    </select>


                </div>


                <div class="m-3 fw-bold">
                    <label for="correo" class="form-label">Correo </label>
                    <input type="email" class="form-control" asp-for="correo" placeholder="correo"/>
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <div class="m-3 fw-bold">
                    <label for="contraseña" class="form-label">Contraseña </label>
                    <input type="password" class="form-control" asp-for="contraseña" placeholder="contraseña"/>
                    <span asp-validation-for="contraseña" class="text-danger"></span>
                </div>

                <div class="m-3 fw-bold">
                    <label for="Ccontraseña" class="form-label">Confirmar contraseña </label>
                    <input asp-for="Cconfirmar" type="password" class="form-control" placeholder="Cconfirmar" />
                    <span asp-validation-for="Cconfirmar" class="text-danger"></span>
                </div>

                <div class="container w-100 my-5 ">
                    <div class="row">

                        <div class="col">
                            <button type="submit" class="btn btn-primary">Registrarse</button>
                        </div>


                        <div class="col">
                            <button type="submit" class="btn btn-primary">salir </button>
                        </div>
                    </div>
                </div>

         </div>

         <div class="col"></div>


     </div>


     </form>

    </div>
 



















    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>