@model productomodel
@{
    Layout = null; ViewData["Title"] = "Home Page";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<style>

    body {
        background-color: rgb(233,233,221)
    }

</style>




<body>
    <div class="container">
       
        <div class="row align-items-end ">


            <h1 class="text-center"> Productos</h1>

        </div>


    </div>

    <div class="container">
        <form asp-action="producto" asp-controller="producto" method="post" enctype="multipart/form-data">


        <div class="row align-items-end">

            <div class="col">
            </div>

            <div class="col border border-1 border-black">

                <img src="~/css/mercainta.png" width="230" alt="Alternate Text" class="center-center" />

                <div class="mb-3 fw-bold">
                    <label class="form-label" for="codigo">Codigo</label>
                    <input type="text" class="form-control" asp-for="codigo"/>
                    <span asp-validation-for="codigo"></span>
                </div>

                <div class="mb-3 fw-bold">

                    <label class="form-label" for="nombre">Nombre</label>
                    <input type="text" class="form-control" asp-for="nombre" />
                    <span asp-validation-for="nombre"></span>

                    

                </div>

              
                    <div class="m-3 fw-bold">
                        <label class="text-center form-label">Descripcion</label>
                        <textarea class="form-control"  rows="6" cols="100" asp-for="descripcion"></textarea>
                        <span asp-validation-for="descripcion"></span>


                </div>

                <div class="mb-3 fw-bold">
                    <label class="form-label">precio venta</label>
                    <input type="text" class="form-control" asp-for="preciov"/>
                    <span asp-validation-for="preciov"></span>
                </div>


                <div class="m-2 fw-bold">
                    <label class="form-label">unidades</label>
                    <input type="text" class="form-control" asp-for="unidad"/>
                    <span asp-validation-for="unidad"></span>
                </div>


                    <div class="m-2 fw-bold">
                        <label class="form-label">modelo</label>
                        <input type="text" class="form-control" asp-for="modelo" />
                        <span asp-validation-for="modelo"></span>
                    </div>


                    <div class="m-2 fw-bold">
                        <label class="form-label">color</label>
                        <input type="text" class="form-control" asp-for="color" />
                        <span asp-validation-for="color"></span>
                    </div>





                <div class="mb-3 fw-bold">
                    <label for="estado" class="form-label">Estado</label>
                    <span  class="text-danger" asp-validation-for="estado"></span>
                    <select  class="form-select" aria-label="Floating label select example" placeholder="sexo" asp-for="estado">
                        <option selected>----------</option>
                        <option value="1">Activo</option>
                        <option value="2">Inactivo</option>
                    </select>


                </div>


                <div class="mb-3 fw-bold">
                    <label class="form-label">selecionar imagen</label>
                    <input type="file" class="form-control" asp-for="urlimagen"/>
                    <span asp-validation-for="urlimagen"></span>


                </div>
                


                <div class="container w-100 my-5 ">
                    <div class="row">

                        <div class="col">
                            <button type="submit" class="btn btn-primary">guardar</button>
                        </div>


                        <div class="col">
                            <button type="submit" class="btn btn-primary">salir </button>
                        </div>
                    </div>
                </div>



            </div>


            <div class="col"></div>


        </div>


        </form>

    </div>









</body>
</html>








