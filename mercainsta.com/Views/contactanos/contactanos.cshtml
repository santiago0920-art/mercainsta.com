@model contactanosmodel
@{
    Layout = null; ViewData["Title"] = "Home Page";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    body{
        background-color:rgb(233,233,221)


    }



</style>
<body>

    <div class="container">
        <form asp-action="contactanos" asp-controller="contactanos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row align-items-end">
            <div class="col">

            </div>

            <div class="col border border-1 border-black">

        <div>
          <h1 class="text-center ">Contactanos </h1>
        </div>

         <div class="mb-3 fw-bold">
             <label class="form-label">Nombre</label>
             <input type="text" class="form-control" asp-for="nombre"/>
                        <span asp-validation-for="nombre" class="text-danger"></span>
          </div>

          <div class="mb-3 fw-bold">

              <label   for="correo"  class="form-label">Correo</label>
              <input type="email" class="form-control " asp-for="correo" placeholder="correo" />
                        <span asp-validation-for="correo" class="text-danger"></span>

          </div>

               <div class="m-3 fw">
                <label for="text-center">Mensaje</label>
                <textarea class="form-control" name="mensaje" rows="6" cols="100" asp-for="mensaje"></textarea>
                <span asp-validation-for="mensaje" class="text-danger"></span>
                </div>

                <div class="container w-100 my-5 ">
                    <div class="row">

                        <div class="col">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>


                        <div class="col">
                            <button type="submit" class="btn btn-primary">Salir </button>
                        </div>
                    </div>
                </div>
               


         </div>


            <div class="col"></div>


        </div>


        </form>

    </div>






















  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>