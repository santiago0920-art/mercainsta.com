@model recuperarmodel
@{
    Layout = null; ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>


    body{

        background-color:rgb(233,233,221)


    }

</style>

<body>

    <div class="container">
       

        <div class="row align-items-end ">


            <h1 class="text-center"> Recuperar contraseña</h1>

        </div>


    </div>

    <div class="container">
        
        
        <div class="row align-items-end">

            <div class="col">
            </div>

            <div class="col border border-1 border-black">

                <img src="~/css/mercainta.png" width="230" alt="Alternate Text" class="center-center" />

                <div class="mb-3 fw-bold">
                    <label class="form-label">NºIdentidad</label>
                    <input type="text" class="form-control" asp-for="Nidentidad" />
                    <span asp-validation-for="Nidentidad"></span>
                </div>

                <div class="mb-3 fw-bold">

                    <label class="form-label">Correo</label>
                    <input type="email" class="form-control" asp-for="correo"/>
                    <span asp-validation-for="correo"></span>

                </div>



                <div class="container w-100 my-5 ">
                    <div class="row">

                        <div class="col">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>


                        <div class="col">
                            <button type="submit" class="btn btn-primary">salir </button>
                        </div>
                    </div>
                </div>



            </div>


            <div class="col"></div>


        </div>


       

    </div>









    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>